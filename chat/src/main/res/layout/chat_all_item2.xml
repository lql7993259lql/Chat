<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="3dp" >

    <ProgressBar
        android:id="@+id/pb_small"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/chat_time"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/chat_user_head"
            android:contentDescription="@string/chat_content_description" />

        <FrameLayout
            android:id="@+id/id_recoder_lenght_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user_image"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_user_image" >

            <TextView
                android:id="@+id/tv_to_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:autoLink="web"
                android:background="@drawable/chat_mmmm"
                android:clickable="true"
                android:focusable="true"
                android:gravity="left|center"
                android:lineSpacingExtra="2dp"
                android:minHeight="42dp"
                android:textColor="@color/chat_from_content"
                android:textSize="17sp" />

            <View
                android:id="@+id/id_recoder_anim_to"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/chat_adj" />
        </FrameLayout>

        <TextView
            android:id="@+id/id_recoder_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user_image"
            android:layout_alignTop="@+id/iv_user_image"
            android:layout_toLeftOf="@+id/id_recoder_lenght_to"
            android:gravity="center"
            android:text="1&apos;"
            android:textColor="#ff777777" />

        <TextView
            android:id="@+id/tv_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/id_recoder_lenght_to"
            android:layout_below="@+id/id_recoder_lenght_to"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="9dp"
            android:paddingTop="2dp"
            android:textColor="#bfbfbf"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/id_recoder_lenght_to"
            android:layout_below="@+id/id_recoder_lenght_to"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="9dp"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_server_image"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/chat_content_description"
            android:src="@drawable/chat_kefu_head"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:textColor="#bfbfbf"
            android:textSize="14sp" 
            android:layout_alignLeft="@+id/id_recoder_lenght_from"
            android:layout_alignTop="@+id/iv_server_image"
            android:layout_toRightOf="@+id/iv_server_image"/>

        <FrameLayout
            android:id="@+id/id_recoder_lenght_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_server_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_server_image" >

            <TextView
                android:id="@+id/tv_from_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/chat_wwwww"
                android:clickable="true"
                android:focusable="true"
                android:autoLink="web"
                android:gravity="left|center"
                android:lineSpacingExtra="2dp"
                android:minHeight="42dp"
                android:textColor="@color/chat_from_content"
                android:textSize="17sp" />

            <View
                android:id="@+id/id_recoder_anim_from"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:background="@drawable/chat_v_anim6" />

            <!-- <ListView
                android:id="@+id/lv_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/chat_transparent"
                android:divider="@null"
                android:listSelector="@color/chat_transparent"
                android:scrollbars="none"
                android:visibility="gone" >
            </ListView> -->
            
            <com.jixiang.chat.view.ChatItemListView
                android:id="@+id/lv_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/chat_transparent"
                android:divider="@null"
                android:listSelector="@color/chat_transparent"
                android:scrollbars="none"
                android:visibility="gone" >
            </com.jixiang.chat.view.ChatItemListView>
            
        </FrameLayout>

        <TextView
            android:id="@+id/id_recoder_time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_recoder_lenght_from"
            android:layout_alignTop="@+id/id_recoder_lenght_from"
            android:layout_toRightOf="@+id/id_recoder_lenght_from"
            android:gravity="center_vertical"
            android:text="1&apos;"
            android:textColor="#ff777777" />

        <TextView
            android:id="@+id/tv_time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_recoder_lenght_from"
            android:layout_below="@+id/id_recoder_lenght_from"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="9dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>