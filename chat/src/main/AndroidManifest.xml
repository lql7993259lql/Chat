<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jixiang.chat">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application >
        <activity
            android:name="com.jixiang.chat.ui.MainActivity"
            android:label="@string/chat_app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="com.jixiang.chat.ui.CameraActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:label="@string/chat_title_activity_send_photo" >
        </activity>
        <activity
            android:name="com.jixiang.chat.ui.AlbumActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:label="@string/chat_title_activity_album" >
        </activity>
        <activity
            android:name="com.jixiang.chat.ui.ImageActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:label="@string/chat_title_activity_image" >
        </activity>
        <activity
            android:name="com.jixiang.chat.ui.VideoActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:label="@string/chat_title_activity_video" >
        </activity>
        <activity
            android:name="com.jixiang.chat.ui.PlayVideoActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:label="@string/chat_title_activity_play_video" >
        </activity>
    </application>
</manifest>